@model HelloStéphaneWeb.Models.UserModel
@{
    ViewBag.Title = "User details";
    ViewBag.User = "active";
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <a title="Back" class="text-black" href="@Url.Action("Index", "User")"><i class="fa-solid fa-circle-chevron-left"></i></a> @ViewBag.Title
    </h1>
</div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-2">
                @Html.LabelFor(x => x.Fullname)<br />
                <strong>@Html.DisplayFor(x => x.Fullname)</strong>
            </div>
            <div class="mb-2">
                @Html.LabelFor(x => x.Username)<br />
                <strong>@Html.DisplayFor(x => x.Username)</strong>
            </div>
            <div class="mb-2">
                @Html.LabelFor(x => x.ProfileSelectedValue)<br />
                <strong>@Html.DisplayFor(x => x.Profile)</strong>
            </div>
            <div class="mb-2">
                @Html.LabelFor(x => x.Status)<br />
                <strong>@Html.DisplayFor(x => x.StatusName)</strong>
            </div>
            <div class="mb-2">
                @Html.LabelFor(x => x.CreatedAt)<br />
                <strong>@Html.DisplayFor(x => x.CreatedAt)</strong>
            </div>
            <div>
                <a href="@Url.Action("Edit", "User", new { id = Model.Id })" class="btn btn-primary"><i class="fa-solid fa-pencil"></i> Edit</a>
                <a href="@Url.Action("Delete", "User", new { id = Model.Id })" class="btn btn-danger" onclick="return confirm('Do you really want to delete @HttpUtility.JavaScriptStringEncode(Model.Fullname) ?')"><i class="fa-solid fa-trash-can"></i> Delete</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-2" style="text-align:center">
                @if (!string.IsNullOrEmpty(Model.Picture))
                {
                    <img id="@Html.IdFor(x => x.Picture)" src="@Model.Picture" class="img-thumbnail img-fluid" style="cursor:pointer;height:230px;">
                }
                else
                {
                    <img id="@Html.IdFor(x => x.Picture)" src="~/Images/default.jpg" class="img-thumbnail img-fluid" style="cursor:pointer;height:230px;">
                }
            </div>
        </div>
    </div>
