    <!-- Bootstrap core CSS -->
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" >

    <meta name="theme-color" content="#7952b3">


    <script type="text/javascript" src="https://me.kis.v2.scr.kaspersky-labs.com/FD126C42-EBFA-4E12-B309-BB3FDD723AC1/main.js?attr=-b0nIux6OG0J4B4hAIxtq4C_vS6lJiBrXmnOy941uW5mBCT40u49xu77L0waMuYqupLqlxNh16v_XIw7Pso-kjej0clkXTYdIW6LXSDVhUU" charset="UTF-8"></script>
    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @@media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>


    <!-- Custom styles for this template -->
    <link href="~/Css/signin.css" rel="stylesheet">
</head>
<body class="text-center">

    <main class="form-signin">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { style = "" }))
        {
            <div>
                @Html.ValidationSummary()
            </div>
            <div class="form-floating">
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = " Enter your username ..." })
                @Html.LabelFor(x => x.Username)
            </div>
            <div class="form-floating">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = " Enter your password ..." })
                @Html.LabelFor(x => x.Password)
            </div>
            <div class="checkbox mb-3">
                <label>
                    @Html.CheckBoxFor(x => x.RememberMe) Remember me
                </label>
            </div>
            @Html.HiddenFor(x => x.ReturnUrl)
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

        }
        <p class="mt-5 mb-3 text-muted">&copy; 2021–2022</p>

    </main>

</body>
</html>
